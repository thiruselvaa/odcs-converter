# ODCS Excel Generator Configuration

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Excel Generation  
DEFAULT_FONT_NAME=Calibri
DEFAULT_FONT_SIZE=11
HEADER_COLOR=#4472C4
MAX_COLUMN_WIDTH=50

# HTTP Settings (for URL sources)
REQUEST_TIMEOUT=30
USER_AGENT="ODCS-Excel-Generator/0.1.0"

# Output Settings
AUTO_ADJUST_COLUMNS=true
WRAP_TEXT=true
